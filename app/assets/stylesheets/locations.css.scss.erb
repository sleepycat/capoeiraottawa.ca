/*Jogos green: 00923f*/

.location_title{
  font-weight: bold;
}

.button_to {
  display: inline-block;
}
.destroy_button {
  padding: 0px;
  background-color: transparent;
  border: none;
}

textarea {
  width: 100%;
}

.action_links > a{
  padding-right:0.5em;
}

.action_link {
  text-decoration: underline;
  font-size: 1.0em;
  color: #000;
}

.infowindow_actions li{
  display: inline;
}

#map_canvas{
  height:30em;
  width:60em;
}

#main{
  padding:0px;
  margin:0px;
}

@media handheld and (max-width: 480px),
  screen and (max-device-width: 480px),
  screen and (max-width: 600px) {

    html, body, #container, #main{
      height:100%;
    }

    #map_canvas{
      height:100%;
      width:100%;
    }
}
