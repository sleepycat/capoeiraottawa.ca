/*Jogos green: 00923f*/

.button_to {
  display: inline-block;
}
.destroy_button {
  padding: 0px;
  background-color: transparent;
  border: none;
}

.youtube-player{
  height:385px;
  width:580px;
}

textarea {
  width: 100%;
}

.edit_video{
  margin: 0.5em;
}

.action_links, .video, .event, #main{
  padding:0.5em;
}

.action_links > a{
  padding-right:0.5em;
}

.action_link {
  text-decoration: underline;
  font-size: 1.0em;
  color: #000;
}

.video{
  margin-top: 20px;
}

.video_thumbnail{
  text-align:center;
}

.video_title > p{
  font-size: 1.3em;
}

.video_description, .video_title{
 padding: 0.3em; 
}

.event img{
  display:block;
  margin-left: auto;
  margin-right: auto;
}

#language_switcher{
  padding-left:10px;
  padding-right: 80px;
  position: absolute;
  right: 0px;
}

#language_switcher img{
  padding-right: 0.3em;
}

img.logo {
  padding-top:2em;
  display:block;
  margin-left: auto;
  margin-right: auto;
  margin-bottom:10px;
}

p, h1, h2, h3, a { font-family: sans-serif;}

h1 {
  font-size:18px;
}

p {
  font-size: 17px;
}

@font-face{
  font-family: impossibilium;
  src: asset-url('imposs_accents.ttf', font);
}

#nav{
  position:relative;
  margin-top:2em;
  border-bottom: 8px solid #00923f;
  color: #00923f;
}

.nav_link {
  color: #00923f;
  text-decoration:none;
  font-size: 1.1em;
  font-family:impossibilium, sans-serif;
}

.nav_link:hover {
  text-decoration:underline;
}

#nav ul {
  display: inline-block;
  margin-top: 0px;
  margin-bottom: 0px;
}


#nav li {
  display:inline;
  padding:3px 10px;
  font-size: 1.3em;
  color:#00923;
  font-family:impossibilium, sans-serif;
}

img {
  border: none;
}

div.field, div.actions {
  margin-bottom: 10px;
}

.notice {
  color: #000;
}

.field_with_errors {
  padding: 2px;
  background-color: red;
  display: table;
}

#errorExplanation {
  border: 2px solid red;
  padding: 7px;
  margin-top: 1em;
  padding-bottom: 0;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

#errorExplanation h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 5px 5px 15px;
  font-size: 12px;
  margin: -7px;
  margin-bottom: 0px;
  background-color: #c00;
  color: #fff;
}

#errorExplanation ul > li {
  font-size: 12px;
  list-style: none;
  padding:0.3em;
}

/* Footer styles */
#footer {
  text-align:center;
  border-top:1px solid #000;
}

#footer p {
  padding:10px;
  margin:0;
  font-size: 0.6em;
}

#container{
  width: 60em;
  margin-left:auto;
  margin-right:auto;
}

#main{
  padding: 2em;
  background-color: rgba(255,255,255, 0.5);
}


/**********
Media Queries
 **********/


@media handheld and (max-width: 480px),
  screen and (max-device-width: 480px),
  screen and (max-width: 600px) {

    html, body, #container, #main{
      width:inherit;
      margin:0px;
      padding:0.3em;
    }

    img.logo{ max-width: 4em;
      padding-top: 0px;
      display:inline;
    }

    #nav{
      position: inherit;
      margin-top:0em;
      border-bottom: 0.2em solid #00923f;
    }

    .nav_link {
      color: #00923f;
      font-size: 1em;
      margin-bottom:0.5em;
    }

    #nav li {
      padding:3px 3px;
      font-size: 1.2em;
      color:#00923;
      font-family:impossibilium, sans-serif;
    }

    #nav ul {
      padding: 0px;
    }

    #language_switcher{
      padding-left:0px;
      padding-right:0px;
      position: absolute;
      right: 0px;
      top:0px;
    }

    .youtube-player iframe{
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .video_container{
      position: relative;
      padding-bottom: 56.25%;
      padding-top: 30px;
      height: 0;
      overflow: hidden;
    }
}
