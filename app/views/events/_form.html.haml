= form_for(@event, :html => {:multipart => true}) do |f|
  - if @event.errors.any?
    #errorExplanation
      %h2= "Oops!"
      %ul
      - @event.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :address
    %br
    = f.text_field :address
  .field
    = f.label :start_date
    %br
    = f.date_select :start_date
  .field
    = f.label :start_time
    %br
    = f.time_select :start_time
  .field
    = f.label :end_date
    %br
    = f.date_select :end_date
  .field
    =f.label :poster
    %br
    =f.file_field :poster

  .actions
    = f.submit t('events.new.submit')
